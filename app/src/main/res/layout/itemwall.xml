<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

<LinearLayout
    android:layout_margin="4dp"
    android:layout_width="wrap_content"
    android:background="@drawable/editeextstyle2"
    android:layout_height="wrap_content"
    android:id="@+id/itemwall">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:padding="4dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="4dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="date" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_alignLeft="@+id/imageAvatar"
            android:layout_alignStart="@+id/imageAvatar"
            android:layout_below="@+id/imageAvatar"
            android:text="text" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageAvatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="13dp"
            android:layout_margin="5dp"
            android:layout_marginStart="13dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/wallconteiner"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text"
            android:layout_marginTop="22dp"
            app:srcCompat="@drawable/check" />



    </RelativeLayout>
</LinearLayout>


</RelativeLayout>