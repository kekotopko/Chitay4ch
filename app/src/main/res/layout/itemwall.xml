<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/editeextstyle"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/itemwall"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <RelativeLayout
            android:id="@+id/conteiner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="4dp">

            <RelativeLayout
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0.5dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageAvatar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="2dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginStart="13dp"
                    app:srcCompat="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/textname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageAvatar"
                    android:layout_marginLeft="2dp"
                    android:layout_below="@+id/textdate"
                    android:layout_toEndOf="@+id/imageAvatar"
                    android:layout_toRightOf="@+id/imageAvatar"
                    android:text="teeeeeeeext"
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_margin="4dp"
                    android:text="date" />

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_alignLeft="@+id/imageAvatar"
                    android:layout_alignStart="@+id/imageAvatar"
                    android:layout_below="@+id/imageAvatar"
                    android:layout_margin="2dp"
                    android:text="text"
                    android:visibility="gone" />

            </RelativeLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/listPhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title">
            </android.support.v7.widget.RecyclerView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/listvideo"
                android:layout_below="@+id/listPhoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/listaudio"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/listvideo">

            </android.support.v7.widget.RecyclerView>

        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>