<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editnewGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:textColor="#FF0000"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Введите адрес паблика для добавления"
        android:layout_below="@+id/editnewGroup"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="vk.com/"
        android:gravity="center_vertical|right"
        android:layout_alignBottom="@+id/editnewGroup"
        android:layout_alignParentLeft="true"
        android:textColor="#FF0000"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="39dp" />

    <Button
        android:id="@+id/imageBtnFind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/plus"
        android:clickable="true"
        android:text="НАЙТИ"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/textView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_below="@+id/imageBtnFind"
        android:layout_marginEnd="77dp"
        android:layout_marginRight="77dp"
        android:layout_marginTop="114dp"
        app:srcCompat="@drawable/find" />
</RelativeLayout>